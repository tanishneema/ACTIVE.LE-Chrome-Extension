{
    "name": "Study Planner",
    "version": "0.0.1",
    "manifest_version": 3,
    "description": "Help you study",
    "author": "Tanish Neema",
    "permissions": [
        "storage",
        "tabs",
        "scripting",
        "management",
        "alarms",
        "notifications"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "128": "assets/logo.png",
        "48": "assets/logo.png",
        "16": "assets/logo.png",
        "96": "assets/logo.png",
        "57": "assets/logo.png",
        "72": "assets/logo.png",
        "60": "assets/logo.png",
        "76": "assets/logo.png",
        "114": "assets/logo.png",
        "120": "assets/logo.png",
        "144": "assets/logo.png",
        "152": "assets/logo.png",
        "180": "assets/logo.png",
        "192": "assets/logo.png",
        "256": "assets/logo.png",
        "384": "assets/logo.png",
        "512": "assets/logo.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>",
                "https://*.amazon.in/*",
                "https://*.flipkart.com/*",
                "https://*.netflix.com/*",
                "https://*.myntra.com/*",
                "https://*.youtube.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_icon": {
            "16": "assets/logo.png",
            "24": "assets/logo.png",
            "32": "assets/logo.png"
        },
        "default_title": "Study Planer",
        "default_popup": "popup.html"
    },
    "omnibox": {
        "keyword": "sp"
    }
}