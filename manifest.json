{
    "name": "ACTIVE.LE",
    "version": "0.0.1",
    "manifest_version": 3,
    "description": "Help you study",
    "author": "Tanish Neema",
    "permissions": [
        "storage",
        "tabs",
        "scripting",
        "management",
        "alarms",
        "notifications",
        "identity",
        "identity.email"
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "128": "assets/logo.png",
        "48": "assets/logo.png",
        "16": "assets/logo.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>",
                "https://*.amazon.in/*",
                "https://*.flipkart.com/*",
                "https://*.netflix.com/*",
                "https://*.myntra.com/*",
                "https://*.youtube.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/bookmark.png",
                "assets/play.png",
                "assets/delete.png",
                "assets/save.png"
            ],
            "matches": [
                "https://*.youtube.com/*"
            ]
        }
    ],
    "action": {
        "default_icon": {
            "16": "assets/logo.png",
            "24": "assets/logo.png",
            "32": "assets/logo.png"
        },
        "default_title": "ACTIVE.LE",
        "default_popup": "popup.html"
    },
    "omnibox": {
        "keyword": "al"
    }
}